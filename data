‏        <div class="logo-text">DATA DUHOK</div>
‏        <div class="logo-sub"></div>
        
‏        <div class="input-group">
‏            <label>ناڤێ کەلوپەلی:</label>
‏            <input type="text" id="itemName" placeholder="بۆ نموونە: دەفتەرا 100 لاپەری" oninput="updateBarcode()">
‏        </div>

‏        <div class="input-group">
‏            <label>کۆدێ بارکۆدی:</label>
‏            <input type="text" id="barcodeValue" placeholder="ژمارێ بنڤیسە" oninput="updateBarcode()">
‏        </div>

‏        <div class="btn-container">
‏            <button class="btn-auto" onclick="generateRandomCode()">کۆدەکێ ئۆتۆماتیکی</button>
‏            <button class="btn-print" onclick="window.print()">پرینت کرن</button>
‏        </div>

        <!-- پیشاندانا بارکودی -->
‏        <div id="print-area">
‏            <div id="display-name" class="barcode-label">Data Duhok</div>
‏            <svg id="barcode"></svg>
‏            <div class="shop-name">DATA DUHOK - STATIONERY</div>
‏        </div>
‏    </div>

‏    <script>
        // دروستکرنا ژمارەکا ئۆتۆماتیکی (8 ژمارە)
‏        function generateRandomCode() {
‏            let randomNum = Math.floor(10000000 + Math.random() * 90000000);
‏            document.getElementById("barcodeValue").value = randomNum;
‏            updateBarcode();
        }

‏        function updateBarcode() {
‏            let name = document.getElementById("itemName").value;
‏            let code = document.getElementById("barcodeValue").value;
            
            // ئەگەر ناڤ هەبیت دیار بکە، ئەگەر نە ناڤێ دوکانێ بنڤیسە
‏            document.getElementById("display-name").innerText = name ? name : "Data Duhok";

‏            if (code.trim() !== "") {
‏                JsBarcode("#barcode", code, {
‏                    format: "CODE128",
‏                    lineColor: "#000",
‏                    width: 2,
‏                    height: 60,
‏                    displayValue: true,
‏                    fontSize: 14,
‏                    fontOptions: "bold"
                });
            }
        }

        // ل دەسپێکێ بارکودەکێ ئامادە نیشان بدە
‏        window.onload = () => {
‏            generateRandomCode();
        };
‏    </script>

